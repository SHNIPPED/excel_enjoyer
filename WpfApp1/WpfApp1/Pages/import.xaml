<Page x:Class="WpfApp1.Pages.import"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="import">

    <Grid Background="White">
        <ScrollViewer>
            <StackPanel x:Name="parrent">
                <DataGrid x:Name="info" AutoGenerateColumns="True"/>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="button"  Content="Старт" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,10,0,0" Click="button_Click"/>
                        <Button x:Name="button1"  Content="Импорт" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25,10,0,0" Click="button_Click1"/>
                        <Button x:Name="button2"  Content="Закончить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25,10,0,0" Click="button_Click2"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
