<Page x:Class="WpfApp1.Pages.editing.add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.editing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="add">

    <Grid Background="White">
        <ScrollViewer>
            <StackPanel>
                <StackPanel x:Name="parrent">

                </StackPanel>

                <StackPanel Margin="25,25,0,0" Orientation="Horizontal">

                    <Button x:Name="_add" 
                Content="Добавить"
                HorizontalAlignment="Left" Click="add_Click"
                />

                    <Button x:Name="addPanel" 
                Margin="25 0 0 0"
                Content="Добавить поле"
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom"
                Click="addPanel_Click"
                />

                </StackPanel>

                <Button x:Name="cancel" 
                Margin="110 20 0 0"
                Content="Отмена"
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom"
                Click="cancel_click"
                />
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>
